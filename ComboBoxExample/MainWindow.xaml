<Window x:Class="ComboBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComboBox Example" Height="200" Width="300">
    <Grid>
        <ComboBox x:Name="comboBox" Width="200" Height="30" VerticalAlignment="Top" Margin="50,30,50,0"
                  SelectionChanged="ComboBox_SelectionChanged" Loaded="ComboBox_Loaded">
            <ComboBoxItem Content="Option 1" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
        </ComboBox>
    </Grid>
</Window>
